<?xml version="1.0"?>
<ruleset name="Croogo">
 <description>Croogo coding standard</description>

 <exclude-pattern>\.git</exclude-pattern>
 <exclude-pattern>*/Config/*.ini.php</exclude-pattern>
 <exclude-pattern>/*/tmp/</exclude-pattern>

 <rule ref="CakePHP">
	 <exclude name="Generic.WhiteSpace.DisallowTabIndent" />
	 <exclude name="CakePHP.Commenting.DocBlockAlignment" />
	 <exclude name="CakePHP.Commenting.FunctionComment.MissingParamComment" />
 </rule>
</ruleset>
